<div class="header index-places">
  <!-- <h1 class="find-places">FIND PLACES</h1> -->
<%= form_tag places_path, method: :get do %>
  <div class="input-group md-form form-sm form-2 pl-0">
    <!-- <input class="form-control my-0 py-1 lime-border" type="text" placeholder="Find your next mission" aria-label="Search" name="search"> -->
    <%= text_field_tag :search,
        params[:search],
        class: "form-control my-0 py-1 lime-border",
        placeholder: "Find your next mission",
        id: 'search-by-location'
      %>
    <div class="input-group-append">
      <span class="input-group-text lime lighten-2" id="basic-text1"><i class="fas fa-search text-grey"
          aria-hidden="true"></i></span>
    </div>
  </div>
<% end %>
</div>

<!-- put the search bar here after ! -->

<!-- cards -->
<div class="global-places-cards">

  <!-- <div class="card-index-place-infos"> -->
    <% @places.each do |place| %>

      <div class="card-place-infos">
        <%= link_to place_path(place[:id]), class: "link-to-place" do %>

        <%= cl_image_tag place.mapmaster_photo, alt: "Photo of the site", class: "img" %>
        <div class="participants">
          <%= image_tag "icons/team_icon.svg", class: "group" %>
          <p class="number-of-participants"><strong><%= place.missions.count %></strong> Captain Green</p>
        </div>
        <p><i class="fas fa-map-marker-alt"></i> <%= place.address %></p>


        <div class="icons-card">
          <!-- condition : the volume emoticon in green -->
          <% if 1 <= place.volume && place.volume <= 2 %>
            <%= image_tag "icons/green_bag.png", class: "icon" %>
            <%= image_tag "icons/grey_car_icon.svg", class: "icon"  %>
            <%= image_tag "icons/grey_truck_icon.png", class: "icon"  %>

          <% elsif 3 <= place.volume && place.volume <= 4 %>
            <%= image_tag "icons/grey_backpack_icon.png", class: "icon" %>
            <%= image_tag "icons/green_car_icon.png", class: "icon" %>
            <%= image_tag "icons/grey_truck_icon.png", class: "icon"  %>
          <% else %>
            <%= image_tag "icons/grey_backpack_icon.png", class: "icon" %>
            <%= image_tag "icons/grey_car_icon.svg", class: "icon"  %>
            <%= image_tag "icons/green_truck_icon.png", class: "icon" %>
          <% end %>
        </div>
        <% end %>
      </div>
    <% end %>
</div>
